@model ContactsDirectory.Models.ContactInfo

<h2>Add New Contact</h2>

<form asp-action="AddContact" method="post">
    <div>
        <label>First Name:</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Last Name:</label>
        <input asp-for="LastName" required />
    </div>
    <div>
        <label>Company Name:</label>
        <input asp-for="CompanyName" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="EmailId" type="email" required />
    </div>
    <div>
        <label>Mobile No:</label>
        <input asp-for="MobileNo" type="number" required />
    </div>
    <div>
        <label>Designation:</label>
        <input asp-for="Designation" />
    </div>
    <div>
        <button type="submit">Save</button>
    </div>
</form>

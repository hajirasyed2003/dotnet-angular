@model ClientsDirectory.Models.ClientInfo

@{
    ViewData["Title"] = "Client Details";
}

<h2 class="mt-3">Client Details</h2>

<table class="table table-bordered">
    <tr><th>Client ID</th><td>@Model.ClientId</td></tr>
    <tr><th>Company Name</th><td>@Model.CompanyName</td></tr>
    <tr><th>Web URL</th><td>@Model.WebUrl</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Category</th><td>@Model.Category</td></tr>
    <tr><th>Standard</th><td>@Model.Standard</td></tr>
</table>

<a class="btn btn-primary" asp-action="ShowAllClientDetails">Back to List</a>

@model List<BookApp.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h2 class="mt-3">List of Books</h2>
<a class="btn btn-primary mb-3" asp-action="AddBook">Add New Book</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Book Name</th>
            <th>Author</th>
            <th>Published Date</th>
            <th>Book URL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Isbn</td>
                <td>@book.BookName</td>
                <td>@book.AuthorName</td>
                <td>@book.PublishedDate.ToShortDateString()</td>
                <td><a href="@book.BookUrl" target="_blank">Link</a></td>
            </tr>
        }
    </tbody>
</table>

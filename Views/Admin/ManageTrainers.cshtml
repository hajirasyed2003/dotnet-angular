@model List<LearningManagementSystem.Models.Trainer>
@{
    ViewData["Title"] = "Manage Trainers";
}

<h2 class="mt-3">Manage Trainers</h2>

<!-- Add Trainer Form -->
<div class="mb-4">
    <form asp-action="ManageTrainers" method="post" class="row g-3">
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" placeholder="Trainer Name" required />
        </div>
        <div class="col-md-5">
            <input type="number" name="TrainerId" class="form-control" placeholder="Trainer Id" required />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Add Trainer</button>
        </div>
    </form>
</div>

<!-- Trainer Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>TrainerId</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.TrainerId</td>
                <td>@trainer.Name</td>
                <td>
                    <a class="btn btn-danger btn-sm"
                       href="/admin/manage-trainers?deleteId=@trainer.TrainerId"
                       onclick="return confirm('Are you sure you want to delete this trainer?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
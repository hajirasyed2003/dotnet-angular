@model List<LearningManagementSystem.Models.Learner>

@{
    ViewData["Title"] = "Manage Learners";
}

<h2 class="mt-3">Manage Learners</h2>

<!-- Add Learner Form -->
<div class="mb-4">
    <form asp-action="ManageLearners" method="post" class="row g-3">
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" placeholder="Learner Name" required />
        </div>
        <div class="col-md-5">
            <input type="email" name="Email" class="form-control" placeholder="Learner Email" required />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Add Learner</button>
        </div>
    </form>
</div>

<!-- Learner Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var learner in Model)
        {
            <tr>
                <td>@learner.LearnerId</td>
                <td>@learner.Name</td>
                <td>@learner.Email</td>
                <td>
                    <a class="btn btn-danger btn-sm"
                       href="/admin/manage-learners?deleteId=@learner.LearnerId"
                       onclick="return confirm('Are you sure you want to delete this learner?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
casestudy 4 

1) using System;

namespace CASESTUDY
{
    class Program
    {
        
    public static void Main(string[] args)
    {
        string[] products={"Laptop","Mouse","Keyboard","Camera","Mic"};
        
        Console.WriteLine("Enter the product:");
        string p=Console.ReadLine();
        foreach(string product in products)
        {
            if (product==p)
            {
                Console.WriteLine("Product Available");
                return;
            }
        }
        Console.WriteLine("Product Not Available");
       
    }
    }
}

2) using System;

namespace CASESTUDY
{
public class Program
{
    public static void Main(string[] args)
    {
        string[] students=new string[3];
        int[,] arr=new int[3,3];
        
        for(int i=0;i<3;i++)
        {
            string name=Console.ReadLine();
            students[i]=name;
            
            for(int j=0;j<3;j++)
            {
                
                int val=int.Parse(Console.ReadLine());
                arr[i,j]=val;
            }
        }
        
        for(int k=0;k<3;k++)
        {
            Console.WriteLine(students[k]);
            int tot=0;
            Console.Write("Marks:");
            for(int l=0;l<3;l++)
            {
                Console.Write(arr[k,l]);
                tot+=arr[k,l];
                Console.Write(" ");
            }
            Console.WriteLine();
            Console.WriteLine("Total:"+tot);
            Console.WriteLine("Average:"+tot/3);
        }
    }
}
}

3) using System;

namespace CASESTUDY
{
public class Program
{
    public static void Main(string[] args)
    {
        Console.WriteLine("Enter the number of subjects:");
        int sublen=int.Parse(Console.ReadLine());
        string[] subjects=new string[sublen];
        int[][] arr=new int[sublen][];
        
        for(int i=0;i<sublen;i++)
        {
            Console.WriteLine("Enter the subject name");
            string name=Console.ReadLine();
            subjects[i]=name;
            Console.WriteLine("Enter the number of tests");
            int n=int.Parse(Console.ReadLine());
            Console.WriteLine("Enter the marks obtained in the tests:");
            arr[i]=new int[n];
            for(int j=0;j<n;j++)
            {
                
                int val=int.Parse(Console.ReadLine());
                arr[i][j]=val;
            }
        }
        
        for(int k=0;k<sublen;k++)
        {
            Console.WriteLine("Subject: "+subjects[k]);
            int tot=0;
            Console.Write("Scores:");
            for(int l=0;l<arr[k].Length;l++)
            {
                Console.Write(arr[k][l]);
                tot+=arr[k][l];
                Console.Write(" ");
            }
            Console.WriteLine();
            Console.WriteLine("Average:"+tot/arr[k].Length);
        }
    }
}
}
